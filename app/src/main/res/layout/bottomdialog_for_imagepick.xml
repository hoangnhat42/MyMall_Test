<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    android:background="@drawable/round_dialog_shape"
    >

    <ImageView
        android:id="@+id/prescription"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/slider_background"
        android:backgroundTint="#D8D6D6"
        android:scaleType="centerInside"
        android:src="@drawable/placeholder_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="left"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/prescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:src="@drawable/ic_menu_camera"
            android:tint="@color/white"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/successGreen"
            android:scaleType="center"
            android:src="@drawable/ic_menu_gallery"

            android:textColor="@color/white"
            android:tint="@color/white"
            app:fabSize="mini" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:id="@+id/skip"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="SKIP"
        android:background="@drawable/slider_background"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout11"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout11"
        app:layout_constraintTop_toTopOf="@+id/linearLayout11" />


</androidx.constraintlayout.widget.ConstraintLayout>